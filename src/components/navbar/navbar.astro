---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";

import { Astronav } from "astro-navbar";
import Icon from "astro-icon";
---

<Container>
  <header class="flex justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Capitalizm</span><span
            class="text-slate-500">VC</span
          >
        </a>
      </div>
    </Astronav>
    <div class="flex gap-4">
      <a href="https://twitter.com/Capitalizmvc" target="_blank"
        ><Icon class="text-black w-6 h-6" name="bx:bxl-twitter" /></a
      >
      <a href="https://t.me/CapitalizMvc" target="_blank"
        ><Icon class="text-black w-6 h-6" name="bx:bxl-telegram" /></a
      >
    </div>
  </header>
</Container>
